{
  "name": "sample-nodejs-typescript-api",
  "version": "1.0.0",
  "description": "Base for an NodeJS API with typescript, lint verification based on standardJS and using git-commit-msg-linter, lint-staged, husk and jest.",
  "main": "index.ts",
  "scripts": {
    "test": "jest",
    "test:staged": "jest",
    "dev": "npx nodemon",
    "build": "rimraf ./build && tsc",
    "start": "npm run build && node build/index.js",
    "lint": "eslint 'src/**' --ext .js,.ts",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bradoqguido/sample-nodejs-typescript-api.git"
  },
  "keywords": [
    "NodeJS",
    "API",
    "typescript",
    "eslint",
    "standardJS",
    "git-commit-msg-linter",
    "lint-staged",
    "husk",
    "jest"
  ],
  "author": "Bradoqguido",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Bradoqguido/sample-nodejs-typescript-api/issues"
  },
  "homepage": "https://github.com/Bradoqguido/sample-nodejs-typescript-api#readme",
  "dependencies": {
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "eslint": "^8.35.0",
    "express": "^4.18.2",
    "git-commit-msg-linter": "^4.7.4",
    "husk": "^0.5.3",
    "lint-staged": "^13.1.2",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.16",
    "@types/jest": "^29.4.0",
    "@types/morgan": "^1.9.4",
    "@types/node": "^15.14.9",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "nodemon": "^2.0.20",
    "rimraf": "^4.1.2",
    "ts-jest": "^28.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
